{
  "compilerOptions": {
    "outDir": "./dist/",
    "noImplicitAny": true,
    "module": "esnext",
    "target": "es5",
    "jsx": "preserve",
    "allowJs": true,
    "strict": true,
    "esModuleInterop": true,
    "moduleResolution": "node",
    "forceConsistentCasingInFileNames": true,
    "lib": ["dom", "dom.iterable", "esnext"],
    "skipLibCheck": true,
    "noEmit": true,
    "incremental": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "plugins": [
      {
        "name": "next",
      },
    ],
  },
  "include": [
    "./jest-setup.ts",
    ".next/types/**/*.ts",
    "dist/types/**/*.ts",
    "dist/pixel-art-gallery/types/**/*.ts",
  ],
  "exclude": ["node_modules"],
}
